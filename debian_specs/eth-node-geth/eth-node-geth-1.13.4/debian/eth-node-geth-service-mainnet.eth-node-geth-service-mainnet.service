[Unit]
Description=Service package for geth

[Service]
Type=exec
ExecStart=/usr/share/eth-node-geth/bin/geth $DEBCRAFTER_EXTRA_SERVICE_ARGS
User=eth-node-geth-service-mainnet
Group=eth-node-geth-service-mainnet
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
PrivateDevices=true
RuntimeDirectory=eth-node-geth-service-mainnet
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target

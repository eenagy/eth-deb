[Unit]
Description=Service package for teku

[Service]
Type=exec
ExecStart=/usr/share/eth-node-teku/bin/teku $DEBCRAFTER_EXTRA_SERVICE_ARGS
User=eth-node-teku-service-mainnet
Group=eth-node-teku-service-mainnet
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
PrivateDevices=true
RuntimeDirectory=eth-node-teku-service-mainnet
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target

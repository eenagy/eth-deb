[Unit]
Description=Service package for prysm

[Service]
Type=exec
ExecStart=/usr/share/prysm/prysm $DEBCRAFTER_EXTRA_SERVICE_ARGS
User=eth-node-prysm-service-mainnet
Group=eth-node-prysm-service-mainnet
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
PrivateDevices=true
RuntimeDirectory=eth-node-prysm-service-mainnet
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target

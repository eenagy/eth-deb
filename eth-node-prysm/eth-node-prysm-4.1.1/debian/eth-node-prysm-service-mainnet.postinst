#!/bin/bash
set -e

. /usr/share/debconf/confmodule

declare -A CONFIG

if [ "$1" = triggered -a "$service_was_running" '!=' 0 ];
then
	deb-systemd-invoke restart eth-node-prysm-service-mainnet
fi

if [ "$1" '!=' triggered ];
then
	dpkg-trigger eth-node-prysm-service-mainnet-config-changed

fi
#DEBHELPER#

exit 0

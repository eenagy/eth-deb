[Unit]
Description=eth-node-mainnet-lighthouse service

[Service]
CapabilityBoundingSet=
ExecStart=/bin/bash /usr/lib/eth-node-config-lighthouse/bin/run-lighthouse.sh \
    --conf-file /etc/eth-node-mainnet/conf.d/mainnet.conf \
    --conf-file /etc/eth-node-mainnet/lighthouse/conf.d/lighthouse-mainnet.conf
IPAddressDeny=none
LockPersonality=true
NoNewPrivileges=true
PrivateDevices=true
PrivateIPC=true
PrivateTmp=true
PrivateUsers=true
ProtectClock=true
ProtectControlGroups=true
ProtectHome=true
ProtectHostname=true
ProtectKernelLogs=true
ProtectKernelModules=true
ProtectKernelTunables=true
ProtectProc=invisible
ProtectSystem=strict
ReadWritePaths=/var/lib/eth-node-mainnet/lighthouse
ReadOnlyPaths=/var/lib/eth-node-mainnet
RemoveIPC=true
RestrictAddressFamilies=AF_INET AF_INET6 AF_UNIX AF_NETLINK 

RestrictNamespaces=true
RestrictRealtime=true
RestrictSUIDSGID=true
SystemCallArchitectures=native
SystemCallFilter=@system-service
# not working for lighthouse as well
#SystemCallFilter=~@privileged @resources @obsolete
UMask=0077
User=eth-node-mainnet-lighthouse
WorkingDirectory=/var/lib/eth-node-mainnet/lighthouse

[Install]
WantedBy=multi-user.target

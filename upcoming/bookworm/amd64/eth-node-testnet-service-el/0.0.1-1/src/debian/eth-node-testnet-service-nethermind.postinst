#!/bin/bash
set -e

. /usr/share/debconf/confmodule

declare -A CONFIG

adduser --system --quiet --group eth-node-testnet-nethermind 
mkdir -p /var/lib/eth-node-testnet/nethermind
chown eth-node-testnet-nethermind:eth-node-testnet-nethermind /var/lib/eth-node-testnet/nethermind 

jwt_file=/etc/eth-node-testnet/jwt.hex
if [ ! -f "$jwt_file" ]; then
	openssl rand -hex 32 | tr -d "\n" | tee "$jwt_file" >/dev/null
fi

if [ "$1" = triggered -a "$service_was_running" '!=' 0 ];
then
	deb-systemd-invoke restart eth-node-testnet-service-nethermind
fi

if [ "$1" '!=' triggered ];
then
	dpkg-trigger eth-node-testnet-service-nethermind-config-changed

fi
#DEBHELPER#

exit 0

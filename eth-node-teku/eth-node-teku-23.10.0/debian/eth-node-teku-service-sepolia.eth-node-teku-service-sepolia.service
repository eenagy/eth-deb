[Unit]
Description=Service package for teku

[Service]
Type=exec
ExecStart=/usr/share/teku/teku $DEBCRAFTER_EXTRA_SERVICE_ARGS
User=eth-node-teku-service-sepolia
Group=eth-node-teku-service-sepolia
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true
PrivateDevices=true
RuntimeDirectory=eth-node-teku-service-sepolia
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
